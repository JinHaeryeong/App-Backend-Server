<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dasom.dasomServer.DAO.RefreshTokenDAO">

    <resultMap id="refreshTokenResultMap" type="com.dasom.dasomServer.DTO.RefreshToken">
        <id property="id" column="id"/>
        <result property="silverId" column="silver_id"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- UPSERT (Insert OR Update) 로직 -->
    <insert id="save" parameterType="com.dasom.dasomServer.DTO.RefreshToken">
        INSERT INTO refresh_tokens (silver_id, refresh_token)
        VALUES (#{refreshToken.silverId}, #{refreshToken.refreshToken})
            ON DUPLICATE KEY UPDATE
                                 refresh_token = VALUES(refresh_token)
    </insert>

    <select id="findBySilverId" parameterType="String" resultMap="refreshTokenResultMap">
        SELECT id, silver_id, refresh_token, created_at FROM refresh_tokens
        WHERE silver_id = #{silverId}
    </select>

    <select id="findByRefreshToken" parameterType="String" resultMap="refreshTokenResultMap">
        SELECT id, silver_id, refresh_token, created_at FROM refresh_tokens
        WHERE refresh_token = #{refreshToken}
    </select>

    <delete id="deleteBySilverId" parameterType="String">
        DELETE FROM refresh_tokens WHERE silver_id = #{silverId}
    </delete>
</mapper>
